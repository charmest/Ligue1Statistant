<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane stylesheets="@../css/statistant.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.statistant.ligue1.view.resources.fxml.StandingOverviewController">
   <bottom>
      <ButtonBar BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="general" mnemonicParsing="false" onAction="#handleGeneral" text="Général">
            <cursor>
                  <Cursor fx:constant="HAND" />
            </cursor>
            <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="domicile" mnemonicParsing="false" onAction="#handleHome" text="Domicile">
            <cursor>
                  <Cursor fx:constant="HAND" />
            </cursor>
            <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="exterieur" mnemonicParsing="false" onAction="#handleAway" text="Extérieur">
            <cursor>
                  <Cursor fx:constant="HAND" />
            </cursor>
            <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="menuPrincipal" mnemonicParsing="false" onAction="#handleMainMenu" text="Menu principal">
            <cursor>
                  <Cursor fx:constant="HAND" />
            </cursor>
            <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
         </buttons>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ButtonBar>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
