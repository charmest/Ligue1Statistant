<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane stylesheets="@../css/statistant.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.statistant.ligue1.view.resources.fxml.ConfrontationOverviewController">
   <bottom>
      <ButtonBar BorderPane.alignment="CENTER">
         <buttons>
         	<Button fx:id="createSecondLeg" mnemonicParsing="false" onAction="#handleSecondLeg" text="Créer les confrontations retour" visible="false">
            <cursor>
                  <Cursor fx:constant="HAND" />
            </cursor>
            </Button>
            <Button fx:id="update" mnemonicParsing="false" onAction="#handleUpdate" text="Mettre à jour" visible="false">
            <cursor>
                  <Cursor fx:constant="HAND" />
            </cursor>
            </Button>
            <Button fx:id="nouveau" mnemonicParsing="false" onAction="#handleNew" text="Nouveau">
            <cursor>
                  <Cursor fx:constant="HAND" />
            </cursor>
            <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="modifier" mnemonicParsing="false" onAction="#handleModify" text="Modifier">
            <cursor>
                  <Cursor fx:constant="HAND" />
            </cursor>
            <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="menuPrincipal" mnemonicParsing="false" onAction="#handleMainMenu" text="Menu principal">
            <cursor>
                  <Cursor fx:constant="HAND" />
            </cursor>
            <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
         </buttons>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ButtonBar>
   </bottom>
</BorderPane>
